# Colors
background = 282c34
foreground = ffffff

background-opacity = 0.85
background-blur = true

# Font: set your font family (fallbacks allowed)
font-family = "JetBrains Mono"
font-family-bold = "JetBrains Mono Bold"
font-family-italic = "JetBrains Mono Italic"
font-family-bold-italic = "JetBrains Mono Bold Italic"

# Adjust cell dimensions (relative to the font)
adjust-cell-width = 0
adjust-cell-height = 0

# Clipboard / selection
copy-on-select = clipboard
selection-clear-on-typing = true
selection-clear-on-copy = false

# Keybindings
keybind = cmd+left=previous_tab
keybind = cmd+right=next_tab

# Window
window-inherit-working-directory = true
window-save-state = always
quit-after-last-window-closed = true
window-decoration = true

# Cursor
cursor-style = block
cursor-style-blink = false

# Mouse
mouse-hide-while-typing = true

# macOS
macos-option-as-alt = true
macos-titlebar-style = tabs

# Scrollback (limit is in bytes, not lines)
scrollback-limit = 100000000

# Shell integration (no-cursor to respect cursor-style setting)
shell-integration = detect
shell-integration-features = no-cursor
